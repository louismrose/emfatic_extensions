<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
         id="org.eclipse.emf.emfatic.builder.EmfaticBuilder"
         name="Emfatic Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            callOnEmptyDelta="true"
            hasNature="true"
            isConfigurable="false">
         <run
               class="org.eclipse.emf.emfatic.ui.extensions.EmfaticBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="org.eclipse.emf.emfatic.nature.EmfaticNature"
         name="Emfatic Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.eclipse.emf.emfatic.ui.extensions.EmfaticNature">
         </run>
      </runtime>
      <builder
            id="org.eclipse.emf.emfatic.builder.EmfaticBuilder">
      </builder>
   </extension>
    <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.eclipse.emf.emfatic.ui.extensions.project"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="org.eclipse.emf.emfatic.ui.extensions.ToggleEmfaticNatureAction"
               icon="icons/emfatic.gif"
               id="org.eclipse.emf.emfatic.ui.extensions.actions.ToggleNatureAction"
               label="Enable Emfatic Project Nature"
               menubarPath="org.eclipse.emf.emfatic.ui.extensions.project.menu/actions"
               state="false"
               style="toggle">
         </action>
         <menu
               id="org.eclipse.emf.emfatic.ui.extensions.project.menu"
               label="Emfatic"
               path="additions">
            <separator
                  name="actions">
            </separator>
         </menu>
      </objectContribution>
      <objectContribution
            id="org.eclipse.emf.emfatic.ui.extensions.project"
            objectClass="org.eclipse.jdt.core.IJavaProject">
         <action
               class="org.eclipse.emf.emfatic.ui.extensions.ToggleEmfaticNatureAction"
               icon="icons/emfatic.gif"
               id="org.eclipse.emf.emfatic.ui.extensions.actions.ToggleNatureAction"
               label="Enable Emfatic Project Nature"
               menubarPath="org.eclipse.emf.emfatic.ui.extensions.project.menu/actions"
               state="false"
               style="toggle">
         </action>
         <menu
               id="org.eclipse.emf.emfatic.ui.extensions.project.menu"
               label="Emfatic"
               path="additions">
            <separator
                  name="actions">
            </separator>
         </menu>
      </objectContribution>
   </extension>
</plugin>
